@page "/"
@using ApiGatewayBlazor.Client.Models.Entidad
@inject HttpClient httpclient

<PageTitle>Catalogo de Productos</PageTitle>

<style>
    .container-stock {
        margin-bottom: 10px;
    }

    .container-productos {
        margin-bottom: 10px;
    }

    .container-productos {
        margin-bottom: 10px;
    }
</style>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Folio</th>
            <th>UUID</th>
            <th>Fecha</th>
            <th>Tipo</th>
            <th>Total</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Producto producto in productos)
        {
            <tr>
                <td>@producto.Id</td>
                <td>@producto.Nombre</td>
                <td>@producto.Descripcion</td>
                <td>@producto.Precio</td>
                <td>@producto.CantidadStock</td>
                <td>
                    <button @onclick="() => LikeProducto(producto)">Like</button>
                    <button @onclick="() => DislikeProducto(producto)">Dislike</button>
                    <button @onclick="() => ComprarProducto(producto)">Comprar</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@code {

    List<Producto> productos = new List<Producto>();

    protected override async Task OnInitializedAsync()
    {
        await BuscarFacturas();
    }

    private async Task BuscarFacturas()
    {
        string apiUrl = "/api/Productos";

        try
        {
            productos = await httpclient.GetFromJsonAsync<List<Producto>>(apiUrl);
        }
        catch (Exception ex)
        {
            // Handle exception (e.g., show an error message)
            Console.WriteLine($"Error fetching data: {ex.Message}");
        }
    }

    private void LikeProducto(Producto producto)
    {
        // Implement your like logic here
        Console.WriteLine($"Liked {producto.Nombre}");
    }

    private void DislikeProducto(Producto producto)
    {
        // Implement your dislike logic here
        Console.WriteLine($"Disliked {producto.Nombre}");
    }

    private void ComprarProducto(Producto producto)
    {
        // Implement your purchase logic here
        Console.WriteLine($"Purchased {producto.Nombre}");
    }
}
