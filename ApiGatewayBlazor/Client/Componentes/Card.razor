@page "/producto"

<style>
    .card {
        border: 1px solid #ccc;
        padding: 20px;
        width: 328px;
        margin: 20px;
        box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.1);
        border-radius: 5px;
        display: inline-block;
    }

    .title {
        font-size: 1.2em;
        margin-bottom: 10px;
    }

    .description {
        font-size: 15px;
        color: #555;
        margin-bottom: 10px;
        height: 50px;
    }

    .price {
        font-size: 1.1em;
        font-weight: bold;
        color: #007BFF;
        margin-bottom: 15px;
    }

    .btn {
        display: inline-block;
        padding: 8px 16px;
        margin-right: 10px;
        border: none;
        border-radius: 3px;
        cursor: pointer;
    }

    .btn-buy {
        background-color: #007BFF;
        color: white;
    }

    .btn-like {
        background-color: #28A745;
        color: white;
    }

    .btn-dislike {
        background-color: #DC3545;
        color: white;
    }
</style>

<div class="card">
    <div class="title">Producto Ejemplo</div>
    <div class="description">Descripción del producto lorem ipsum...</div>
    <div class="price">$99.99</div>
    <button class="btn btn-buy">Comprar</button>
    <button class="btn btn-like" @onclick="IncrementLikes">👍 (@likes)</button>
    <button class="btn btn-dislike" @onclick="IncrementDislikes">👎 (@dislikes)</button>
</div>

@code {
    private int likes = 0;
    private int dislikes = 0;

    private void IncrementLikes()
    {
        likes++;
    }

    private void IncrementDislikes()
    {
        dislikes++;
    }
}
